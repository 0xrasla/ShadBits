# Auto detect text files and perform LF normalization
* text=auto eol=lf

# JS/TS files
*.js text
*.ts text
*.jsx text
*.tsx text

# JSON files
*.json text

# CSS files
*.css text

# HTML files
*.html text

# Markdown files
*.md text

# Images should be treated as binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
